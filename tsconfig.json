{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "module": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
  },
  "include": [
    "src"
  ]
}